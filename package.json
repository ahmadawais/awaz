{
  "name": "awaz",
  "version": "0.0.2",
  "description": "Text to speech. Done right.",
  "type": "module",
  "bin": {
    "awaz": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/cli.js",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "elevenlabs",
    "tts",
    "text-to-speech",
    "speech",
    "say",
    "cli",
    "voice",
    "audio"
  ],
  "author": "Ahmad Awais <me@AhmadAwais.com> (https://AhmadAwais.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmadawais/awaz"
  },
  "bugs": {
    "url": "https://github.com/ahmadawais/awaz/issues"
  },
  "homepage": "https://github.com/ahmadawais/awaz#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "ora": "^8.1.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
